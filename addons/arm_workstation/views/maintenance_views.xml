<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_arm_maintenance_list" model="ir.ui.view">
    <field name="name">arm.workstation.maintenance.list</field>
    <field name="model">arm.workstation.maintenance</field>
    <field name="arch" type="xml">
      <list string="Maintenance">
        <field name="name"/>
        <field name="workstation_id"/>
        <field name="type"/>
        <field name="date_start"/>
        <field name="duration_minutes"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <record id="view_arm_maintenance_form" model="ir.ui.view">
    <field name="name">arm.workstation.maintenance.form</field>
    <field name="model">arm.workstation.maintenance</field>
    <field name="arch" type="xml">
      <form string="Maintenance">
        <header>
          <field name="state" widget="statusbar" statusbar_visible="open,done"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="workstation_id"/>
              <field name="type"/>
            </group>
            <group>
              <field name="date_start"/>
              <field name="duration_minutes"/>
            </group>
          </group>
          <group>
            <field name="notes"/>
          </group>
          <group>
            <field name="attachment_ids" widget="many2many_binary"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_arm_maintenance_search" model="ir.ui.view">
    <field name="name">arm.workstation.maintenance.search</field>
    <field name="model">arm.workstation.maintenance</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="workstation_id"/>
        <filter name="planned" string="Planned" domain="[('type','=','planned')]"/>
        <filter name="breakdown" string="Breakdown" domain="[('type','=','breakdown')]"/>
        <filter name="open" string="Open" domain="[('state','=','open')]"/>
        <filter name="done" string="Done" domain="[('state','=','done')]"/>
      </search>
    </field>
  </record>

  <record id="action_arm_maintenance" model="ir.actions.act_window">
    <field name="name">Maintenance</field>
    <field name="res_model">arm.workstation.maintenance</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
