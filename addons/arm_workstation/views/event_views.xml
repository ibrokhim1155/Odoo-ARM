<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_arm_task_event_list" model="ir.ui.view">
    <field name="name">arm.task.event.list</field>
    <field name="model">arm.task.event</field>
    <field name="arch" type="xml">
      <list string="Task Events">
        <field name="create_date"/>
        <field name="task_id"/>
        <field name="user_id"/>
        <field name="action"/>
        <field name="reason"/>
      </list>
    </field>
  </record>

  <record id="view_arm_task_event_search" model="ir.ui.view">
    <field name="name">arm.task.event.search</field>
    <field name="model">arm.task.event</field>
    <field name="arch" type="xml">
      <search>
        <field name="task_id"/>
        <field name="user_id"/>
        <filter name="take" string="Take" domain="[('action','=','take')]"/>
        <filter name="done" string="Done" domain="[('action','=','done')]"/>
        <filter name="defect" string="Defect" domain="[('action','=','defect')]"/>
        <filter name="blocked" string="Blocked" domain="[('action','=','blocked')]"/>
      </search>
    </field>
  </record>

  <record id="action_arm_task_event" model="ir.actions.act_window">
    <field name="name">Task Events</field>
    <field name="res_model">arm.task.event</field>
    <field name="view_mode">list</field>
  </record>
</odoo>
